                     TextWrapping="Wrap" 
                     Text="" 
                     VerticalAlignment="Top" 
                     Width="260"
                     Name="txbUserName"/>
            <PasswordBox HorizontalAlignment="Left" 
                     Height="23" 
                     Margin="244,118,0,0" 
                     PasswordChar="●"
                     VerticalAlignment="Top" 
                     Width="260"
                     Name="pwbPassword"
                     />
