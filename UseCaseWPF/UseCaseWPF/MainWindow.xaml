            <Label Content="Phone" HorizontalAlignment="Left" Margin="244,21,0,0" VerticalAlignment="Top"/>
            <Label Content="PIN" HorizontalAlignment="Left" Margin="244,92,0,0" VerticalAlignment="Top"/>
            <TextBox HorizontalAlignment="Left" 
                Height="23" 
                Margin="244,47,0,0" 
                TextWrapping="Wrap" 
                Text="" 
                VerticalAlignment="Top" 
                Width="260"
                Name="txbPhone"
                     />
            <PasswordBox HorizontalAlignment="Left" 
                Height="23" 
                Margin="244,118,0,0" 
                PasswordChar="●"
                VerticalAlignment="Top" 
                Width="260"
                Name="pwbPIN"
                     />
            
